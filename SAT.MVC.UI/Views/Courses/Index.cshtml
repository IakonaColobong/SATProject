@model IEnumerable<SAT.DATA.EF.Course>

@{
    ViewBag.Title = "Course Information";
}

<h2>@ViewBag.Title</h2>

<div class="container">
    <div class="row my-3">
        <div class="col-md-3">

            @*@if (User.Identity.IsAuthenticated)*@
            @*{*@

                @Html.ActionLink("Add new Course", "Create", null, new { @class = "btn btn-success" })

            @*}*@
        </div>
    </div>
</div>


<table class="table">

    @*@Html.ActionLink("Create New", "Create")*@


    <tr>
        <th class="col-md-2 offset-md-4">
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.CourseDescription)
        </th>*@
        <th class="col-md-1">
            @Html.DisplayNameFor(model => model.CreditHours)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Curriculum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>*@
        <th class="col-md-1">
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        @*<th></th>*@
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CourseName)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.CourseDescription)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.CreditHours)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Curriculum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td class="col-md-2">
            @Html.ActionLink("Edit", "Edit", new { id=item.CourseId }) |
            @Html.ActionLink("Details", "Details", new { id=item.CourseId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CourseId })
        </td>
    </tr>
}

</table>
